{
  "name": "shared-assets-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "keywords": [
    "Land Explorer"
  ],
  "author": "TABLEFLIP",
  "scripts": {
    "postinstall": "npm run build",
    "test": "standard",
    "lint:fix": "standard --fix",
    "build": "npm-run-all --parallel build:*",
    "build:js": "browserify src/index.js -o dist/bundle.js",
    "build:html": "rsync -a src/index.html dist/index.html",
    "build:css": "rsync -a node_modules/tachyons/css/tachyons.min.css ./dist",
    "build:mapbox-gl": "rsync -a node_modules/mapbox-gl/dist/* ./dist/mapbox-gl",
    "build:mapbox-gl-geocoder": "rsync -a node_modules/mapbox-gl-geocoder/dist/* ./dist/mapbox-gl-geocoder",
    "build:svgs": "rsync -a src/assets/svgs ./dist",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "watchify src/index.js -o dist/bundle.js",
    "watch:html": "nodemon --exec 'npm run build:html' --watch src/index.html",
    "watch:server": "browser-sync start --port 3000 --no-open --server 'dist' --files 'dist'",
    "deploy:next": "npm run build && surge -p ./dist -d sharedassets.tableflip.io"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react",
            "stage-2"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "better-react-spinkit": "^2.0.0-4",
    "es6-promise": "^4.0.5",
    "fetch-jsonp": "^1.0.2",
    "inline-style-prefixer": "^2.0.4",
    "lodash.difference": "^4.5.0",
    "lodash.flatmap": "^4.5.0",
    "lodash.uniq": "^4.5.0",
    "mapbox": "^1.0.0-beta3",
    "mapbox-gl": "^0.28.0",
    "mapbox-gl-geocoder": "^2.0.1",
    "query-string": "^4.2.3",
    "raster-tile-style": "^1.0.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "tachyons": "^4.5.3",
    "underscore.string": "^3.3.4",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-eslint": "^7.0.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.2",
    "browserify": "^13.1.0",
    "http-server": "^0.9.0",
    "npm-run-all": "^3.1.0",
    "standard": "^8.4.0",
    "tachyons-cli": "^1.0.8",
    "watchify": "^3.7.0"
  }
}
